<PantallaGeneral>
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols:2
        BoxLayout: #Box con los botones

            size_hint_x:  .3
            size_hint_y:1
            canvas:
                Color:
                    rgb: 0,0,1

            GridLayout: #grid con los botones y foto
                rows: 5
                BoxLayout: #foto + name
                    size_hint_x:.6
                    size_hint_y:1
                    canvas:
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        size: root.size
                        text_size: cm(6), cm(4)
                        text:'Nombre aki ahre xd'
                        font_size:'20sp'

                Button: #boton mis datos
                    size_hint_x: .7
                    size_hint_y: .5
                    id: Boton_a_contacto
                    text: "Mis Datos"
                    on_release: root.manager.current = 'MisDatos'

                Button: #boton contactos
                    size_hint_x: .7
                    size_hint_y: .5
                    text: "Contactos"
                    on_release: root.manager.current = 'Contactos'
                    on_release: root.manager.transition.direction = 'left'
                Button: #boton feriados
                    size_hint_x: .7
                    size_hint_y: .5
                    text: "Feriados"
                    on_release: root.manager.current = 'Feriados'
                BoxLayout: #cosas
                    size_hint: .33, .70
                    canvas:
                        Color:
                            rgb: 1,0,0
                        Rectangle:
                            size: self.size
                            pos: self.pos
        BoxLayout:
            id: box_calendario
            size_hint_x:.7
            size_hint_y:1
            canvas:
                Color:
                    rgb: 0,0,0
                Rectangle:
                    size:self.size
                    pos:self.pos
            BoxLayout:
                id: caja_calendario
                padding: 5,30,5,40
                canvas:
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        size: self.size
                        pos: self.pos



