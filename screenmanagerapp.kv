<PantallaGeneral>
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    BoxLayout: #Box con los botones
        size_hint:  .3,1
        canvas:
            Color:
                rgb: 0,0,1

        GridLayout: #grid con los botones y foto
            rows: 5
            BoxLayout: #foto + name
                size_hint: .6, 1
                canvas:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    size: root.size
                    text_size: cm(6), cm(4)
                    text:'Nombre aki ahre xd'
                    font_size:'20sp'

            Button: #boton mis datos
                size_hint_x: .7
