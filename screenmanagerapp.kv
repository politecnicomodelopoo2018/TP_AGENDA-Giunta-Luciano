            #celeste
            BoxLayout: #Foto del usuario + botones
                size_hint_x: .30
                size_hint_y: 1
                canvas:
                    Color:
                        rgb: 0,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                GridLayout: #Separacion foto y botones
                    rows:2
                    AnchorLayout: #Foto
                        anchor_x: 'center'
                        anchor_y: 'top'
                        size_hint: 1,.8
                        canvas:
                            Color:
                                rgb: 1,1,0
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        BoxLayout:
                            size_hint : None, None
                            canvas:
                                Color:
                                    rgb: 1,1,1
                                Ellipse:
                                    pos: self.pos
                                    size: 50, 50


                    GridLayout: #Botones
                        cols:2
                        size_hint: 1,.2
                        padding: 20,20,20,20
                        BoxLayout:
                            padding:0,0,10,0
                            Button: #Editar boton
                                id: BotonEditar
                                text: 'Editar'
                                on_press: root.EnableInputs()
                        BoxLayout:
                            padding:10,0,0,0
                            Button:
                                id: BotonGuardar
                                text: 'Guardar'
                                on_press: root.DisabledInputs()
                                on_press: root.UpdateCosas()
